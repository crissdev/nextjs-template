{
  "name": "nextjs-template",
  "private": true,
  "scripts": {
    "dev": "node validate-env.mts && prisma generate && next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "format": "prettier --write src/ ./*.{mjs,ts,mts,md}",
    "format:check": "prettier --check src/ ./*.{mjs,ts,mts,md}",
    "lint": "eslint",
    "lint-staged": "lint-staged --concurrent=false",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest -c vitest-unit.config.ts",
    "test:unit:coverage": "vitest -c vitest-unit.config.ts --coverage",
    "test:ui": "vitest -c vitest-ui.config.ts",
    "test:ui:coverage": "vitest -c vitest-ui.config.ts --coverage",
    "test:integration": "vitest -c vitest-integration.config.ts",
    "test:integration:coverage": "vitest -c vitest-integration.config.ts --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:ci": "start-server-and-test 'pnpm build && pnpm start' http://localhost:3000 'playwright test'",
    "postinstall": "playwright install --with-deps",
    "prepare": "husky"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "next": "16.0.7",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@next/env": "^16.0.7",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testcontainers/postgresql": "^11.9.0",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "babel-plugin-react-compiler": "1.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.7",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.3",
    "pg": "^8.16.3",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prisma": "^7.1.0",
    "start-server-and-test": "^2.1.3",
    "tailwindcss": "^4.1.17",
    "testcontainers": "^11.9.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.15",
    "vitest-browser-react": "^2.0.2"
  }
}
