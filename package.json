{
  "name": "nextjs-template",
  "private": true,
  "scripts": {
    "predev": "node validate-env.mts",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format": "prettier --write src/ ./*.{mjs,ts,mts,md}",
    "format:check": "prettier --check src/ ./*.{mjs,ts,mts,md}",
    "lint": "eslint",
    "lint-staged": "lint-staged --concurrent=false",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest -c vitest-unit.config.ts",
    "test:unit:coverage": "vitest -c vitest-unit.config.ts --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "16.0.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@next/env": "^16.0.3",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^20.19.25",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.9",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "next": "16.0.3",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.9"
  }
}
