{
  "name": "nextjs-template",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node validate-env.mts && prisma generate && next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "format": "prettier --write src/ ./*.{mjs,ts,mts,md}",
    "format:check": "prettier --check src/ ./*.{mjs,ts,mts,md}",
    "lint": "eslint",
    "lint-staged": "lint-staged --concurrent=false",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest -c vitest-unit.config.ts",
    "test:unit:coverage": "vitest -c vitest-unit.config.ts --coverage",
    "test:ui": "vitest -c vitest-ui.config.ts",
    "test:ui:headless": "vitest -c vitest-ui.config.ts --browser.headless",
    "test:ui:coverage": "vitest -c vitest-ui.config.ts --coverage",
    "test:integration": "vitest -c vitest-integration.config.ts",
    "test:integration:coverage": "vitest -c vitest-integration.config.ts --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:ci": "start-server-and-test 'pnpm build && pnpm start' http://localhost:3000 'playwright test'",
    "postinstall": "playwright install --with-deps",
    "prepare": "husky"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.561.0",
    "next": "16.0.10",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@next/env": "^16.0.10",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testcontainers/postgresql": "^11.10.0",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.0.10",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.4",
    "pg": "^8.16.3",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prisma": "^7.2.0",
    "start-server-and-test": "^2.1.3",
    "tailwindcss": "^4.1.18",
    "testcontainers": "^11.10.0",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vercel": "^50.1.2",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "vitest-browser-react": "^2.0.2"
  }
}
